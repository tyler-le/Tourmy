                <div id="surfboard3" class="featured-boards-panel ">
                    <a href="/surfboards/<%= featuredSurfboards[2]._id %> ">
                        <img class="product-img" src="/images/surfboards/superbrand_fling.jpg" alt="">
                        <h2 class="product-name">Superbrand Fling</h2>
                        <h6 class="product-price">from $999.99</h6>
                    </a>
                </div>

                <div id="surfboard4" class="featured-boards-panel ">
