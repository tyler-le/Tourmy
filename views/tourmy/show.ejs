<html lang="en">

<head>
    <%- include('../partials/head')%>
    <title>Tourmy | <%= specificProduct.name %></title>
</head>

<body>
    <div class="container-fluid container-show">
        <%- include('../partials/navbar')%>

        <div class="breadcrumb"><a href="/">Home</a> <span>|</span> <span><%= specificProduct.name %> </span></div>

        <div class="show-image">
            <img src="/images/surfboards/firewire_seaside.jpg" alt="">
        </div>

        <div class="show-info">
            <h1><%= specificProduct.name %></h1>
            <h4>$<%= specificProduct.price %>.00</h4>
